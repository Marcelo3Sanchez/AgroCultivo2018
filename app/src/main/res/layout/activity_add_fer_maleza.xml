<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2589bd"
    android:orientation="vertical"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    tools:context=".Procesos.RecyclerRecursos.Add.Add_terreno">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_title_malez"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/coda"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Nuevo recurso"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/add_salir_maleza"
                        android:layout_width="35dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_arrow_back_24"
                        android:gravity="center_vertical" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/coda"
                    android:text="Tipo de recurso:"
                    android:textColor="#ff4081" />

                <Spinner
                    android:id="@+id/add_spinner_malez"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:soundEffectsEnabled="true"
                    android:textAlignment="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/add_tiempo_malez"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:contentDescription="00:00"
                            android:drawableStart="@drawable/baseline_opacity_24"
                            android:ems="10"
                            android:hint="Cantidad"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@android:color/background_dark"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/coda"
                        android:text="lt / kg"
                        android:textColor="#ff4081" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/add_inversion_malez"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:contentDescription="00.00"
                            android:drawableStart="@drawable/money"
                            android:ems="10"
                            android:hint="InversiÃ³n"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@android:color/background_dark"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/coda"
                        android:text="USD"
                        android:textColor="#ff4081" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/add_not_malez"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp"
                            android:bufferType="editable"
                            android:ems="100"
                            android:hint="Observaciones"
                            android:inputType="textMultiLine"
                            android:textColor="@android:color/background_dark"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.v7.widget.CardView
                        android:id="@+id/add_btnadd_malez"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_rowWeight="1"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        app:cardCornerRadius="2dp">

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="147dp"
                            android:layout_height="40dp"
                            android:drawableStart="@drawable/round_how_to_vote_black_18"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Guardar"
                            android:textColor="@android:color/background_dark"
                            android:textSize="18sp" />

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </ScrollView>

</LinearLayout>
