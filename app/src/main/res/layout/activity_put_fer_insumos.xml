<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2589bd"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    tools:context=".Procesos.RecyclerRecursos.Add.Add_terreno">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/edit_name_recurs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/coda"
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:text="Recurso"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/put_salir_recurs"
                        android:layout_width="35dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_arrow_back_24"
                        android:gravity="center_vertical" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/coda"
                            android:text="Cantidad de insumo: "
                            android:textColor="#ff4081" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/put_hora"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edi_horas_recurs"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:contentDescription="00:00"
                                android:drawablePadding="8dp"
                                android:drawableStart="@drawable/baseline_opacity_24"
                                android:ems="10"
                                android:enabled="false"
                                android:hint="Lt / Kg"
                                android:inputType="numberDecimal"
                                android:textColor="@android:color/background_dark"
                                android:textSize="14sp" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/coda"
                            android:text="Valor de la inversion:"
                            android:textColor="#ff4081" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/put_inversion"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edit_inversion_recurs"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:contentDescription="00.00"
                                android:drawablePadding="8dp"
                                android:drawableStart="@drawable/money"
                                android:ems="10"
                                android:enabled="false"
                                android:hint="USD"
                                android:inputType="numberDecimal"
                                android:textColor="@android:color/background_dark"
                                android:textSize="14sp" />

                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/coda"
                    android:text="Observaciones:"
                    android:textColor="#ff4081" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/put_nota"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/edit_not_recurs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:bufferType="editable"
                        android:ems="100"
                        android:enabled="false"
                        android:inputType="textMultiLine"
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/edit_btn_recurs"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_rowWeight="1"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        app:cardCornerRadius="2dp">

                        <Button
                            android:id="@+id/btn_edi"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:background="@drawable/baseline_edit_black_24"
                            android:gravity="center_vertical|fill_horizontal" />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/elim_btn_recurs"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_rowWeight="1"
                        android:layout_weight="1"
                        app:cardCornerRadius="2dp">

                        <Button
                            android:id="@+id/btn_elim"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:background="@drawable/baseline_delete_black_24"
                            android:gravity="center_vertical|fill_horizontal" />

                    </android.support.v7.widget.CardView>
                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>
    </ScrollView>

</LinearLayout>
