<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="2dp">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Seleccione un proceso"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="18sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/btn_recurs"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            app:cardBackgroundColor="#E61BC90F"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/txt_ruta1"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Recursos"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_maleza"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="25dp"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/holo_blue_dark"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/txt_ruta2"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Fertilizantes"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>